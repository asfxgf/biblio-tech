<h1>Voici la liste de tous les livres :</h1>
<% @livre.each do |livre| %>
  <div>
    <%= cl_image_tag(livre.picture, :width => 100, :height => 150, :crop => :fill) %>
    <%= livre.name %>
    <%= livre.category %>
    <%= livre.description %>
    <%= livre.language %>
    <%= livre.author %>
    <%= livre.id %>
    <%= link_to "En savoir plus", livre_path(livre.id) %>

  </div>
<% end %>
